<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_16sdp">

    <!-- Circular progress bar for calories -->
    <ProgressBar
        android:id="@+id/progressBarCalories"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/circle_progress_drawable" />

    <!-- Text representation in the center -->
    <TextView
            android:id="@+id/textViewProgressCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0/2000"
            android:textSize="@dimen/_24sdp" />

    <!-- Input text for calories -->
    <EditText
            android:id="@+id/editTextCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBarCalories"
            android:layout_marginTop="@dimen/_16sdp"
            android:hint="Enter calories"
            android:inputType="number" />

    <!-- Button to add calories -->
    <Button
            android:id="@+id/buttonAddCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextCalories"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="Add Calories" />

</RelativeLayout>
